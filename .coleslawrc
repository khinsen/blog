;;; -*- mode : lisp -*-
(;; Required information
 :author "Konrad Hinsen"
 :staging-dir "site/"
 :deploy-dir "site/"
 :domain ""
 :routing ((:post           "posts/~a")
           (:page           "pages/~a")
           (:tag-index      "tag/~a")
           (:month-index    "date/~a")
           (:numeric-index  "~d")
           (:feed           "feeds/all.~a.xml")
           (:tag-feed       "tag/~a.xml")
           (:sitemap        "~a.xml"))
 :title "Konrad Hinsen's blog"
 :theme "plain"
 :repo "~/Repos/blog"
 :excerpt-sep "<!-- more -->"
 :feeds ()
 :plugins ((sitemap)
           (static-pages))
 :sitenav ((:url "/pages/about.html" :name "About")
           (:url "/pages/license.html" :name "License")
           (:url "/feeds/all.rss.xml" :name "RSS")
           (:url "/feeds/all.atom.xml" :name "Atom")))
